@page "/entryDay"

<section class="entry-day">
    <div class="container">
        <div class="content">
            <div class="header">
                <p class="xlarge">100 days to</p>
                <h4>Learn Guitar</h4>
            </div>

            <div class="content-wrapper">
                <div class="col-left">@*Black box calendar will be here*@</div>
                <div class="col-right">
                    <div class="col-wrapper">
                        <div class="track-day">
                            <p class="small sub-header">Successful day?</p>
                            <div class="input-wrapper">
                                <input type="radio" id="Yes" name="rating"/>
                                <label for="Yes">Yes</label>
                            
                                <input type="radio" id="NotYet" name="rating" checked />
                                <label for="NotYet">Not Yet</label>

                                <input type="radio" id="No" name="rating" />
                                <label for="No">No</label>
                            </div>
                            

                        </div>
                        <div class="rating">
                            <p class="small sub-header">Rate your day</p>
                            <div class="img-wrapper">
                                <img src="images/Stars.svg" />
                            </div>
                        </div>
                        <div class="notes">
                            <p class="small sub-header">Notes about your day</p>
                            <textarea placeholder="Tell us about your day" maxlength="120" />
                        </div>

                        <button class="secondary-button">Save & Submit Day</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


