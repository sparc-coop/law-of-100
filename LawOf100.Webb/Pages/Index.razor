@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<p>
    The uppercase of <b>@SampleString</b> is <b>@UppercaseString</b>
</p>


@code {
    string SampleString = "hello this is a sample";
    string? UppercaseString;

    protected override async Task OnInitializedAsync()
    {
        var result = await PublicApi().UppercaseTextAsync(SampleString);
        UppercaseString = result.Result;
    }
}
